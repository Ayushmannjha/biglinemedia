# Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# EmailJS Configuration (Required for Contact Form)
# =============================================================================
# Get these from your EmailJS dashboard: https://www.emailjs.com/
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here
VITE_EMAILJS_SERVICE_ID=your_service_id_here
VITE_EMAILJS_TEMPLATE_ID=your_template_id_here
VITE_EMAILJS_USER_ID=your_user_id_here
VITE_EMAILJS_API_URL=https://api.emailjs.com/api/v1.0/email/send
VITE_EMAILJS_API_KEY=your_api_key_here
VITE_EMAILJS_TIMEOUT=5000
VITE_EMAILJS_DEBUG_MODE=false
VITE_EMAILJS_DEFAULT_FROM="your_email@example.com"

# =============================================================================
# Medium RSS to JSON API Configuration (Required for Blog Section)
# =============================================================================
# Replace with your actual Medium username
VITE_MEDIUM_RSS_URL=https://medium.com/feed/@your_medium_username
VITE_RSS_TO_JSON_API=https://api.rss2json.com/v1/api.json

# =============================================================================
# Image CDN URLs (Required for Image Optimization)
# =============================================================================
VITE_UNSPLASH_BASE_URL=https://images.unsplash.com
VITE_DEFAULT_FALLBACK_IMAGE=https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?w=800&h=400&fit=crop
VITE_PLACEHOLDER_IMAGE_URL=https://placehold.co

# =============================================================================
# Cloudinary Configuration (Optional - for Advanced Image Optimization)
# =============================================================================
# Sign up at https://cloudinary.com/ for advanced image optimization
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name_here
VITE_CLOUDINARY_API_KEY=your_api_key_here
VITE_CLOUDINARY_API_SECRET=your_api_secret_here
VITE_CLOUDINARY_BASE_URL=https://res.cloudinary.com

# =============================================================================
# YouTube/Social Media URLs (Required for Portfolio/Social Features)
# =============================================================================
VITE_YOUTUBE_BASE_URL=https://www.youtube.com/embed
VITE_INSTAGRAM_BASE_URL=https://www.instagram.com

# =============================================================================
# Google Services (Required for Maps Integration)
# =============================================================================
VITE_GOOGLE_MAPS_BASE_URL=https://maps.google.com

# =============================================================================
# Company Social Links (Update with your actual social media handles)
# =============================================================================
VITE_COMPANY_LINKEDIN=https://www.linkedin.com/company/yourcompany
VITE_COMPANY_INSTAGRAM=https://www.instagram.com/your_instagram_handle/
VITE_COMPANY_FACEBOOK=https://facebook.com/yourcompany
VITE_COMPANY_TWITTER=https://twitter.com/yourcompany

# =============================================================================
# API Configuration (Performance & Reliability Settings)
# =============================================================================
VITE_API_REQUEST_TIMEOUT=10000
VITE_CACHE_DURATION=3600000
VITE_MAX_RETRY_ATTEMPTS=3

# =============================================================================
# Application Configuration
# =============================================================================
VITE_ENV_MODE=development
VITE_DEBUG_MODE=true
VITE_ANALYTICS_ENABLED=false

# =============================================================================
# SECURITY NOTES:
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Only use VITE_ prefix for variables that should be exposed to the frontend
# 3. Keep sensitive keys (like API secrets) on the backend only
# 4. Use different values for development, staging, and production
# 5. Regularly rotate API keys and tokens
# =============================================================================
